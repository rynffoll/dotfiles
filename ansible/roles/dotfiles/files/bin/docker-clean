#!/bin/bash

case $1 in
    "-i" | "--images")
        docker rmi -f "$(docker images -q)"
        ;;
    "-c" | "--containers")
        docker rm -f "$(docker ps -a -q)"
        ;;
    *)
        echo "docker-clean:"
        echo "-i / --images     -- remove all images"
        echo "-c / --containers -- remove all containers"
        ;;
esac
