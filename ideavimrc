" -*- mode: vimrc -*-
let mapleader = " "

set clipboard+=unnamed
set hls
set ignorecase smartcase
set incsearch
set showmode

set surround
set multiple-cursors
set commentary
set NERDTree

set which-key
let g:WhichKey_ShowVimActions = "true"
let g:WhichKey_DefaultDelay = 1000

" jump
nnoremap <leader>jj :action GotoDeclaration<cr>

" buffer
nnoremap <leader>bb :action RecentFiles<cr>

" open
nnoremap <leader>ot :action ActivateTerminalToolWindow<cr>
nnoremap <leader>or :action ActivateRunToolWindow<cr>
nnoremap <leader>od :action ActivateDebugToolWindow<cr>

" file
nnoremap <leader>fR :action RenameFile<cr>
nnoremap <leader>ft :NERDTree<cr>

" project
nnoremap <leader>pp :action ManageRecentProjects<cr>

" search
nnoremap <leader>/p :action FindInPath<cr>

" toggle
nnoremap <leader>to :action ToggleDistractionFreeMode<cr>

" edit
nnoremap <leader>ee :edit ~/.ideavimrc<cr>
nnoremap <leader>er :source ~/.ideavimrc<cr>

" git
nnoremap <leader>gg :action ActivateVersionControlToolWindow<cr>
nnoremap <leader>gc :action CheckinProject<cr>
nnoremap <leader>gP :action Git.Pull<cr>
nnoremap <leader>gb :action Git.Branches<cr>

" local
nnoremap <leader>m= :action ReformatCode<cr>
nnoremap <leader>mee :action ChooseRunConfiguration<cr>
nnoremap <leader>mRr :action RenameElement<cr>

" support russian keyboard layout
